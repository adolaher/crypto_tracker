<h1>Submit Coin</h1>

<%= form_for(@coin) do |f| %>
<div class="field">
  <%= f.label :name %>
  <%= f.text_area :name %>
</div>

<div class="field">
  <%= f.label :picture %>
  <%= f.text_area :picture %>
</div>

<div class="field">
  <%= f.label :description %>
  <%= f.text_area :description %>
</div>

<div class="actions">
  <%= f.submit "Add Coin" %>
</div>
<% end %>
